<!DOCTYPE window [
	<!ENTITY % prefsDTD SYSTEM "chrome://dtm/locale/prefpanes.dtd">
	%prefsDTD;
	<!ENTITY % defprefsDTD SYSTEM "chrome://dtm-locale/content/prefpanes.dtd">
	%defprefsDTD;
]>
<overlay xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
	<prefpane id="paneMain" label="&mainpane.label;" onpaneload="Main.load();">

		<preferences>
			<preference id="dtmexisting" name="extensions.dtm.conflictresolution" type="int" />
			<preference id="dtmalert" name="extensions.dtm.alertbox" type="int" />
			<preference id="dtmdone" name="extensions.dtm.sounds.done" type="bool" />
			<preference id="dtmerror" name="extensions.dtm.sounds.error" type="bool" />
			<preference id="dtmautoclose" name="extensions.dtm.closedtm" type="bool" />
			<preference id="dtmtextlinks" name="extensions.dtm.textlinks" type="bool" />
			<preference id="dtmlistsniffedvideos" name="extensions.dtm.listsniffedvideos" type="bool" />
		</preferences>

		<groupbox id="defaultsdesc">
			<caption label="&mainpane.defaults.caption;" />
			<description>&mainpane.defaults.desc;
			</description>
		</groupbox>

		<groupbox>
			<caption id="ren" label="&mainpane.nameclash.caption;" />
			<radiogroup id="scelta" preference="dtmexisting" orient="horizontal">
				<radio id="rename1" label="&mainpane.rename.label;" value="0" />
				<radio id="overwrite" label="&mainpane.overwrite.label;" value="1" />
				<radio id="skip" label="&mainpane.skip.label;" value="2" />
				<radio id="ask" label="&mainpane.ask.label;" value="3" />
			</radiogroup>
		</groupbox>

		<groupbox>
			<caption label="&mainpane.alert.caption;" />
			<hbox flex="1" align="center" pack="start">
				<label value="&mainpane.alert.label;" control="menualert" />
				<menulist preference="dtmalert" readonly="true" id="menualert">
					<menupopup>
						<menuitem id="alert1" label="&mainpane.alertbox.label;" value="0" />
						<menuitem id="alert2" label="&mainpane.alertnotifications2.label;" value="1" />
						<menuitem id="alert3" label="&mainpane.alertnone.label;" value="2" />
					</menupopup>
				</menulist>
			</hbox>
			<checkbox label="&mainpane.sounderror2.label;" preference="dtmerror" />
			<checkbox id="soundDone" label="&mainpane.sounddone.label;" preference="dtmdone" />
			<checkbox id="closedtm" label="&mainpane.closedtm.label;" preference="dtmautoclose" />
		</groupbox>

		<groupbox>
			<caption label="&mainpane.misc.caption;" />
			<checkbox label="&mainpane.textlinks.label;" preference="dtmtextlinks" />
			<checkbox label="&mainpane.listsniffedvideos.label;" preference="dtmlistsniffedvideos" />
		</groupbox>
	</prefpane>
</overlay>
