<?xml-stylesheet href="chrome://dtm/skin/integration/toolbarinstall.css" type="text/css" ?>

<!DOCTYPE overlay [
	<!ENTITY % menuDTD SYSTEM "chrome://dtm/locale/menu.dtd">
	%menuDTD;
	<!ENTITY % defmenuDTD SYSTEM "chrome://dtm-locale/content/menu.dtd">
	%defmenuDTD;
]>
<dialog xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul" title="&dtm-tbinstall;" id="DownTheMoon" windowtype="DTA:TBInstall">
		<script type="text/javascript" src="toolbarinstall.js"/>
		<grid>
			<columns><column/><column flex="1"/></columns>
			<rows>
				<row align="center" pack="center">
					<image id="dtm-icon" class="icon" />
					<vbox flex="1">
						<checkbox id="dtm-button" label="&dtm-regular2.label;" />
						<description>&dtm-regular.desc;</description>
					</vbox>
				</row>
				<separator class="groove" />
				<row align="center" pack="center">
					<image id="dtm-turbo-icon" class="icon" />
					<vbox flex="1">
						<checkbox id="dtm-turbo-button" label="&dtm-regular-turbo2.label;" />
						<description>&dtm-regular-turbo.desc;</description>
					</vbox>
				</row>
				<separator class="groove" />
				<row align="center" pack="center">
					<image id="dtm-turboselect-icon" class="icon" />
					<vbox>
						<checkbox id="dtm-turboselect-button" label="&dtm-selector-button2.label;" />
						<description>&dtm-selector-button.desc;</description>
					</vbox>
				</row>
				<separator class="groove" />
				<row align="center" pack="center">
					<image id="dtm-manager-icon" class="icon" />
					<vbox flex="1">
						<checkbox id="dtm-manager-button" label="&dtm-manager-button;" />
						<description>&dtm-manager-button.desc;</description>
					</vbox>
				</row>
			</rows>
		</grid>
</dialog>
